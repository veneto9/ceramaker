<!-- Ceramaker – Oferecemos (Personalização) -->
<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 840 840">
  <defs>
    <style>
      .c1{fill:#ebbd53;}  /* amarelo da marca */
      .c2{fill:#a6492e;}  /* marrom avermelhado */
      .c3{fill:#615b4e;}  /* marrom escuro */
      .st{fill:none;stroke:#5b2f23;stroke-width:18;stroke-linecap:round;stroke-linejoin:round;}
    </style>
    <clipPath id="vasoClip">
      <!-- silhueta do vaso no estilo da logo -->
      <path d="M420 60c33 0 76 7 76 17 0 17-12 78-12 129 0 92 36 171 108 224 98 72 160 232 40 340-60 54-142 78-212 78s-152-24-212-78c-120-108-58-268 40-340 72-53 108-132 108-224 0-51-12-112-12-129 0-10 43-17 76-17z"></path>
    </clipPath>
  </defs>

  <!-- base do vaso -->
  <g clip-path="url(#vasoClip)">
    <rect x="0" y="0" width="840" height="840" fill="#ffffff"></rect>
    <rect x="140" y="60" width="560" height="720" class="c1"></rect>

    <!-- faixas decorativas -->
    <g class="c2">
      <rect x="160" y="210" width="520" height="22"></rect>
      <rect x="160" y="260" width="520" height="18"></rect>
      <rect x="160" y="520" width="520" height="24"></rect>
    </g>

    <!-- coração central (eco da logo) -->
    <g>
      <ellipse cx="420" cy="560" rx="210" ry="170" class="c2"></ellipse>
      <ellipse cx="420" cy="560" rx="160" ry="130" class="c1"></ellipse>
      <path d="M420 480c-36-62-126-40-126 30 0 84 126 144 126 144s126-60 126-144c0-70-90-92-126-30z" class="c2"></path>
    </g>

    <!-- “personalização”: chave inglesa + engrenagem integradas ao vaso -->
    <!-- engrenagem (lado esquerdo) -->
    <g transform="translate(220,330) scale(0.9)">
      <circle cx="120" cy="120" r="58" class="c1" stroke="#5b2f23" stroke-width="14"></circle>
      <g class="c3">
        <path d="M120 32l18 26 32-2 8 30 29 10-10 29 22 24-22 24 10 29-29 10-8 30-32-2-18 26-18-26-32 2-8-30-29-10 10-29-22-24 22-24-10-29 29-10 8-30 32 2z" fill="#615b4e"></path>
      </g>
      <circle cx="120" cy="120" r="24" fill="#fff" stroke="#5b2f23" stroke-width="10"></circle>
    </g>

    <!-- chave inglesa (lado direito) -->
    <g transform="translate(440,300) rotate(-12)">
      <path d="M40 40c24-22 61-20 84 5l-44 46 20 20 46-44c25 23 27 60 5 84l-92 96c-20 21-52 21-72 1s-20-52 1-72z" class="c3"></path>
      <rect x="30" y="150" width="160" height="26" rx="13" class="c2"></rect>
      <circle cx="60" cy="64" r="10" fill="#fff"></circle>
    </g>

    <!-- ornamentos suaves -->
    <path d="M180 430c90-40 390-40 480 0" class="st" opacity=".3"></path>
    <path d="M220 300c60-70 340-70 400 0" class="st" opacity=".25"></path>
  </g>

  <!-- gargalo do vaso e linhas superiores, fora do clip para ficar por cima -->
  <g>
    <path d="M420 60c33 0 76 7 76 17 0 17-12 78-12 129 0 15-1 30-3 44H359c-2-14-3-29-3-44 0-51-12-112-12-129 0-10 43-17 76-17z" class="c3"></path>
    <rect x="300" y="230" width="240" height="16" class="c2"></rect>
    <rect x="300" y="260" width="240" height="12" class="c2"></rect>
  </g>
</svg>
